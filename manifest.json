{
  "manifest_version": 3,
  "name": "Podsumuj w Perplexity",
  "version": "1.0",
  "description": "Inteligentne podsumowania stron Firefox z panelem bocznym w Perplexity AI.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "action": {
    "default_title": "Ustawienia",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png"
    }
  },
  "sidebar_action": {
    "default_title": "Podsumowanie",
    "default_panel": "sidebar.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png"
    },
    "open_at_install": false
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "szczypi@hotmail.com"
    }
  }
}
